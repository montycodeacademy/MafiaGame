Screen:
    MDNavigationDrawer:
        id: nav_drawer
        on_touch_up: app.update_profile()

        BoxLayout:
            orientation: 'vertical'
            padding: "10dp"
            spacing: "10dp"

            BoxLayout:
                size_hint_y: None
                height: toptoolbar.height

            AnchorLayout:
                anchor_x: 'left'
                anchor_y: 'top'
                size_hint_y: None
                height: avatar.height

                Image:
                    id: avatar
                    size_hint: None, None
                    size: "100dp", "100dp"
                    source:'avatar.png'

            MDTextField:
                hint_text: "E-mail"
                id: email
                on_touch_up:print()

            MDTextField:
                hint_text: "Nickname"
                id: nickname
                on_touch_up:print()
            ScrollView:

    BoxLayout:
        orientation: 'vertical'
        MDToolbar:
            id: toptoolbar
            title: 'MafiaApp'
            left_action_items: [["menu", lambda x:nav_drawer.set_state('open')]]

        Screen:

