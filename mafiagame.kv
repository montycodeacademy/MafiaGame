Screen:
    MDNavigationDrawer:
        id: nav_drawer

        BoxLayout:
            orientation: 'vertical'
            padding: "10dp"
            spacing: "10dp"

            BoxLayout:
                size_hint_y: None
                height: toptoolbar.height

            AnchorLayout:
                anchor_x: 'left'
                anchor_y: 'top'
                size_hint_y: None
                height: avatar.height

                Image:
                    id: avatar
                    size_hint: None, None
                    size: "100dp", "100dp"
                    source:'avatar.png'

            BoxLayout:
                orientation: 'horizontal'
                size_hint_y: None
                height: email.height

                MDLabel:
                    text: 'Email:'
                    size_hint_y: None
                    font_style: "H6"
                    height: self.texture_size[1]

                MDTextField:
                    hint_text: "Enter your e-mail"
                    id: email




            MDLabel:
                id: nick_name
                text: 'Nickname: Vasu'
                size_hint_y: None
                font_style: "Button"
                height: self.texture_size[1]

            MDFlatButton:
                text: 'Get Info'
                on_press: app.print_info()

            ScrollView:

    BoxLayout:
        orientation: 'vertical'
        MDToolbar:
            id: toptoolbar
            title: 'MafiaApp'
            left_action_items: [["menu", lambda x:nav_drawer.set_state('open')]]

        Screen:
